{
  "name": "node-wechat-terminal",
  "version": "1.0.0",
  "description": "Wechat client in terminal",
  "main": "cli.js",
  "scripts": {
    "test": "node node_modules/xo/cli.js && node node_modules/mocha/bin/mocha",
    "start": "node cli.js"
  },
  "keywords": [
    "wechat",
    "terminal"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goorockey/node-wechat-terminal.git"
  },
  "author": "goorockey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/goorockey/node-wechat-terminal/issues"
  },
  "homepage": "https://github.com/goorockey/node-wechat-terminal#readme",
  "dependencies": {
    "columnify": "^1.5.2",
    "lodash": "^3.10.1",
    "qrcode-terminal": "^0.10.0",
    "request-promise": "^1.0.2",
    "tough-cookie-filestore": "0.0.1",
    "winston": "^1.1.1",
    "xml2js": "^0.4.13"
  },
  "devDependencies": {
    "chai": "^3.4.0",
    "mocha": "^2.3.3",
    "xo": "^0.10.1"
  },
  "xo": {
    "envs": [
      "node",
      "mocha",
      "es6"
    ],
    "rules": {
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-eval": 0,
      "no-inline-comments": 0,
      "camelcase": 0,
      "no-unused-vars": 1,
      "no-warning-comments": 0,
      "comma-dangle": [
        1,
        "always-multiline"
      ],
      "arrow-parens": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        2,
        "never"
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ]
    }
  }
}
