{
  "name": "node-wechat-terminal",
  "version": "1.0.0",
  "description": "Wechat client in terminal",
  "main": "cli.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node cli.js"
  },
  "keywords": [
    "wechat",
    "terminal"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goorockey/node-wechat-terminal.git"
  },
  "author": "goorockey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/goorockey/node-wechat-terminal/issues"
  },
  "homepage": "https://github.com/goorockey/node-wechat-terminal#readme",
  "dependencies": {
    "columnify": "^1.5.2",
    "lodash": "^3.10.1",
    "qrcode-terminal": "^0.10.0",
    "request-promise": "^1.0.2",
    "tough-cookie-filestore": "0.0.1",
    "winston": "^1.1.1",
    "xml2js": "^0.4.13"
  },
  "devDependencies": {
    "mocha": "^2.3.3",
    "xo": "^0.10.1"
  },
  "xo": {
    "envs": [
      "node",
      "mocha",
      "es6"
    ],
    "rules": {
      "indent": [2, 2],
      "no-eval": 0,
      "no-inline-comments": 0,
      "camelcase": 1,
      "no-unused-vars": 1,
      "comma-dangle": [1, "always-multiline"],
      "arrow-parens": [2, "always"],
      "space-before-function-paren": [2, "never"],
      "object-curly-spacing": [2, "never"],
      "object-curly-spacing": [2, "always"],
      "brace-style": [2, "1tbs", { "allowSingleLine": true }]
    }
  }
}
